<Window x:Class="konyvtar_foprogram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:konyvtar_foprogram"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Bal oldali menü -->
        <StackPanel Grid.Column="0">
            <Button Content="Könyvtár" Click="KonyvtarButtonClick"/>
            <Button Content="Felhasználók" Click="FelhasznalokButtonClick"/>
            <Button Content="Információ" Click="InformacioButtonClick"/>
        </StackPanel>

        <!-- Jobb oldali tartalom -->
        <StackPanel x:Name="jobbOldal" Grid.Column="1">
            <!-- Itt jelennek meg dinamikusan a kártyák -->
        </StackPanel>
    </Grid>
</Window>
